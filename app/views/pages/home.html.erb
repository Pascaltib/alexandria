            <div class="flex flex-col items-center mt-12 text-center">
                <span class="relative inline-flex w-full md:w-auto">

                <%= link_to "Learn more", batches_path, :id => "open-contacts-dialog-btn",
                    :class => "inline-flex items-center justify-center w-full px-8 py-2 text-base font-bold leading-3 text-white bg-gray-900 border border-transparent rounded-full md:w-auto hover:bg-gray-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-600", :method => :get %>

                </span>
            </div>
        </div>
        <!-- End Main Hero Content -->


        <!-- Second Hero Content -->
        <div class="container max-w-lg px-4 py-32 mx-auto text-left md:max-w-none md:text-center">
            <h1 class="text-5xl font-extrabold leading-10 tracking-tight text-left text-blue-900 md:text-center sm:leading-none md:text-6xl lg:text-7xl"><span class="inline md:block">Every single</span> <span class="relative mt-2 text-transparent bg-clip-text bg-gradient-to-br from-blue-600 to-blue-500 md:inline-block">admin dream</span></h1>
            <div class="mx-auto mt-5 text-gray-500 md:mt-12 md:max-w-lg md:text-center lg:text-lg">Save all your costs, gather all your students. We do the rest.</div>
            <div class="flex flex-col items-center mt-12 text-center">
                <span class="relative inline-flex w-full md:w-auto">

                <%= link_to "Start the free demo", batches_path, :id => "open-contacts-dialog-btn",
                    :class => "inline-flex items-center justify-center w-full px-8 py-2 text-base font-bold leading-3 text-white bg-yellow-500 border border-transparent rounded-full md:w-auto hover:bg-yellow-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-600", :method => :get %>

                </span>
            </div>
        </div>
        <!-- End Second Hero Content -->

    </div>
