<section class="w-full px-8 py-16 xl:px-8">
    <div class="max-w-5xl mx-auto">
        <div class="flex flex-col items-center md:flex-row justify-center">
          <div class="w-full mt-16 md:mt-0 md:w-2/5">
            <div class="relative z-10 h-auto p-8 py-10 overflow-hidden bg-white border-solid border-2 border-gray-100 rounded-lg px-7">
              <h4 class="mb-6 text-2xl font-medium text-center">Forgot your password?</h4>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email,
                required: true,
                autofocus: true,
                label: false,
                placeholder: "Email",
                input_html: { autocomplete: "off" }, class: "block w-full px-4 py-3 mb-4 border border-2 border-transparent border-gray-200 rounded-lg focus:ring focus:ring-blue-500 focus:outline-none" %>
  </div>

  <div class="form-actions block">
    <%= f.button :submit, "Recover password", class: "w-full px-3 py-4 text-lg bg-black cursor-pointer hover:bg-gray-600 text-white rounded-lg" %>
  </div>
<% end %>



        </div>
      <p class="w-full mt-4 text-sm text-center text-gray-500"><%= link_to "Already have an account? Log in", new_session_path(resource_name) %> </p>
      </div>
    </div>
  </div>
</section>
