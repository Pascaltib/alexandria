<!-- Section 1 -->
<section class="w-full px-8 text-gray-700 bg-white">
    <div class="container flex flex-col flex-wrap items-center justify-between py-5 mx-auto md:flex-row max-w-10xl">
        <div class="relative flex flex-col md:flex-row">

        <a href="/" class="flex items-center mb-5 font-medium text-gray-900 lg:w-auto lg:items-center lg:justify-center md:mb-0">
            <span class="mx-0 text-xl font-black leading-none text-gray-900 select-none"><img style="width: 20vh" src="https://res.cloudinary.com/dqdslxgem/image/upload/v1638177412/LogoAlexandria_o3saqx.png" alt=""></span>
        </a>
        <div class="inline-flex items-center mt-1 ml-5 space-x-6 lg:justify-end">
        <ul class="flex">
          <li class="ml-6 mr-6">
            <a class="text-right font-medium leading-6 text-gray-900 whitespace-no-wrap transition duration-150 ease-in-out hover:text-gray-400" href="#">About</a>
          </li>
          <li class="mr-6">
            <a class="text-right font-medium leading-6 text-gray-900 whitespace-no-wrap transition duration-150 ease-in-out hover:text-gray-400" href="#">Blog</a>
          </li>
          <li class="mr-6">
            <a class="text-right font-medium leading-6 text-gray-900 whitespace-no-wrap transition duration-150 ease-in-out hover:text-gray-400" href="#">Team</a>
          </li>
          <li class="mr-6">
            <a class="text-right font-medium leading-6 text-gray-900 whitespace-no-wrap transition duration-150 ease-in-out hover:text-gray-400" href="#">Pricing</a>
          </li>
          <li class="mr-6">
            <a class="text-right font-medium leading-6 text-gray-900 whitespace-no-wrap transition duration-150 ease-in-out hover:text-gray-400" href="#">Contact</a>
          </li>
          <li class="mr-6">
            <a class="text-right font-medium leading-6 text-gray-900 whitespace-no-wrap transition duration-150 ease-in-out hover:text-gray-400" href="#">Terms</a>
          </li>
        </ul>


        </div>
        </div>


      <% if user_signed_in? %>
      <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "mt-1 text-base font-medium leading-6 text-gray-900 whitespace-no-wrap transition duration-150 ease-in-out hover:text-gray-400" %>
      <% else %>
        <div class="inline-flex items-center ml-5 mt-1 space-x-6 lg:justify-end">
            <%= link_to "Log in", new_user_session_path, class: "text-base font-medium leading-6 text-gray-900 whitespace-no-wrap transition duration-150 ease-in-out hover:text-gray-400" %>
            <%= link_to "Sign up", new_user_registration_path, class: "inline-flex items-center justify-center w-full px-8 transition duration-150 ease-in-out py-2 text-base font-bold leading-3 text-white bg-gray-900 border border-transparent rounded-full md:w-auto hover:bg-gray-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-600" %>
        </div>
      <% end %>
    </div>
